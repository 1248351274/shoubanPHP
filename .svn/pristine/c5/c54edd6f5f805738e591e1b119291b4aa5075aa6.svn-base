<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>后台登录-X-admin1.1</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico" type="__IMG__/x-icon" />
    <link rel="stylesheet" href="__CSS__/font.css">
    <link rel="stylesheet" href="__CSS__/xadmin.css">
    <link rel="stylesheet" href="__CSS__/swiper.min.css">
    <script type="text/javascript" src="__JS__/jquery.min.js"></script>
    <script type="text/javascript" src="__JS__/swiper.jquery.min.js"></script>
    <script src="__LIB__/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript" src="__JS__/xadmin.js"></script>

</head>
<body>
    <!-- 中部开始 -->
    <div class="wrapper">
        <!-- 右侧主体开始 -->
        <div class="page-content">
          <div class="content">
            <!-- 右侧内容框架，更改从这里开始 -->
            <form class="layui-form" id="form">
                <div class="layui-form-item">
                    <label for="Order_BillID" class="layui-form-label">
                       <span class="x-red">*</span>运单号
                    </label>
                    <div class="layui-input-inline">
                        <input type="text" id="Order_BillID" value="{$msg.Order_BillID}" readonly name="Order_BillID" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label for="Order_Goods" class="layui-form-label">
                       <span class="x-red">*</span>货物名称
                    </label>
                    <div class="layui-input-inline">
                        <input type="text" id="Order_Goods" value="{$msg.Order_Goods}" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label for="Order_Num" class="layui-form-label">
                       <span class="x-red">*</span>货物数量
                    </label>
                    <div class="layui-input-inline">
                        <input type="text" id="Order_Num" value="{$msg.Order_Num}" name='Order_Num' class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label for="Order_Num" class="layui-form-label">
                       <span class="x-red">*</span>货款
                    </label>
                    <div class="layui-input-inline">
                        <input type="text" id="Order_Payment" value="{$msg.Order_Payment}" name='Order_Payment' class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label for="Order_Send" class="layui-form-label">
                       <span class="x-red">*</span>始发站
                    </label>
                    <div class="layui-input-inline">
                        <input type="text" id="Order_Send" value="{$msg.Order_Send}" name='Order_Send' class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label for="Order_End" class="layui-form-label">
                       <span class="x-red">*</span>目的站
                    </label>
                    <div class="layui-input-inline">
                        <input type="text" id="Order_End" value="{$msg.Order_End}" name='Order_End' class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">运单状态</label>
                    <div class="layui-input-inline">
                        <select name="Order_LogisStates" id='Order_LogisStates' lay-filter="zt">
                            <option value="共享中" {if condition="$msg['Order_LogisStates']=='共享中'"}selected{/if}>共享中</option>
                            <option value="待接单" {if condition="$msg['Order_LogisStates']=='待接单'"}selected{/if}>待接单</option>
                            
                        </select>
                    </div>
                </div>
                <div class="layui-form-item" id='cywl'>
                    <label class="layui-form-label">承运物流</label>
                    <div class="layui-input-inline">
                        <select name="Order_LogisCode" id='Order_LogisCode' lay-filter="cy">
                            <option value="{$msg['Order_LogisCode']}">{$msg['Order_LogisName']}</option>
                        {volist name="list" id="vo"}
                            <option value="{$vo.Logis_Code}">{$vo.Logis_Name}</option>
                        {/volist}   
                        </select>
                    </div>
                </div>
   
                
                <div class="layui-form-item">
                    <label for="L_repass" class="layui-form-label">
                    </label>
                    <button  class="layui-btn" lay-filter="save" lay-submit="" id="edit_btn">
                        修改
                    </button>
                </div>
            </form>
            <!-- 右侧内容框架，更改从这里结束 -->
          </div>
        </div>
        <!-- 右侧主体结束 -->
    </div>
    <!-- 中部结束 -->
<script>
    $('#edit_btn').click(function(){
        if($('#Name').val()=="" || $('#Power').val()==""){
            layer.msg('必填项不能为空');
            return false;
        }
        $.ajax({
            type:"POST",
            dataType:"json",
            url:"{:url('index/order/edit')}",
            data:$('#form').serialize(),
            success:function(data){
                if(data==1){

                    parent.location.reload();
                }else{

                    layer.msg('修改失败')
                }
            },
            error:function(){

                layer.msg('修改失败！')
            }
        })
    })
    layui.use("form", function () {
        var form = layui.form();
        form.on('select(zt)', function(data){
           if(data.value=='共享中'){
                $('#cywl').css('display','none');
            }else{
                $('#cywl').css('display','block');
            }  
        })
    })
    $(document).ready(function(){
        if($('#Order_LogisStates').val()=='共享中'){
            $('#cywl').css('display','none');
        }    
    })
    
</script>
</body>
</html>